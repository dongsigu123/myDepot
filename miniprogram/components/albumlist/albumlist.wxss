/* components/albumlist/albumlist.wxss */
.hz{
	width: 100%;
	position: relative;
}
.hz .tp{
	width: 100%;
	height: 420rpx;
	vertical-align: bottom;
	transition: filter 0.7s;
}
.active{
	filter: brightness(70%);
}
.active2{
	filter: brightness(100%);
}
.act{
	opacity: 1;
}
.act2{
	opacity: 0;
}
.wenzi{
	width: 100%;
	position: absolute;
	text-align: left;
	left: 20px;
	bottom: 15px;
	transition: opacity 0.7s;
}
.wenzi view{
	width: 100%;
}
.wenzi .t1{
	color: white;
	width: 40px;
	line-height: 20px;
	font-size: 11px;
	padding-bottom: 7px;
	margin-bottom: 4px;
	border-bottom: 1px solid #dbd9d9;
}
.wenzi .t2{
	font-size: 15px;
	height: 30px;
	color: white;
	line-height: 30px;
	font-weight: bold;
	margin-bottom: 3px;
}
.wenzi .t3{
	color: rgb(236, 231, 231);
	font-size: 11px;
	line-height: 20px;
	height: 20px;
}
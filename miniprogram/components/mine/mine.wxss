/* components/mine/mine.wxss */
.box{
	width: 100%;
	height: 100vh;
	background-color: #111111;
}
.box .top{
	width: 100%;
	position: relative;
	padding-top: 40px;
}
.top .bjtp{
	width: 100%;
	filter: brightness(70%);
	vertical-align: bottom;
}
.top .topcont{
	width: 30%;
	position: absolute;
	text-align: center;
	left: 50%;
	top: 50%;
	margin-top: 20px;
	transform: translate(-50%,-50%);
	z-index: 2;
}
.top .topcont image{
	width: 90px;
	height: 90px;
	border-radius: 50%;
	vertical-align: bottom;
}
.top .topcont text{
	margin-top: 15px;
	line-height: 30px;
	font-size:16px;
	color: rgb(202, 199, 199);
	display: block;
}
.content{
	width: 100%;
}
.content .conttop{
	width: 100%;
}
.content .hz{
	width: 92%;
	height: 50px;
	padding: 0 5%;
	background-color: #191919;
	overflow: hidden;
	color: #bebebe;
	font-size: 14px;
	line-height: 50px;
	border-bottom: 1px solid #252525;
	display: flex;
}
.content .hz .icon1{
	font-weight: bold;
}
.content .hz text{
	flex: 1;
	margin-left: 9px;
}
.content .hz .icon2{
	font-weight: bold;
}
.conttop .hz:nth-of-type(2) .icon1{
	transform: rotateZ(180deg);
}
.content .contbot{
	width: 100%;
	margin-top: 40px;
}
.btn{
	background-color: transparent;
	border: none;
	outline: none;
	color: rgb(202, 199, 199);
	height: 30px;
	line-height: 30px;
	margin-top: 15px;
	font-size: 16px;
}
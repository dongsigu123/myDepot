/* components/channellist/channellist.wxss */
.hz{
	width: 50%;
	position: relative;
	float: left;
}
.hz .tp{
	width: 100%;
	height: 375rpx;
	vertical-align: bottom;
	transition: filter 0.7s;
}
.hz text{
	position: absolute;
	left: 50%;
	top: 50%;
	letter-spacing:1px;
	transform: translate(-50%,-50%);
	color: white;
	font-size: 16px;
	transition: opacity 0.7s;
}
.active{
	filter: brightness(70%);
}
.active2{
	filter: brightness(100%);
}
.act{
	opacity: 1;
}
.act2{
	opacity: 0;
}
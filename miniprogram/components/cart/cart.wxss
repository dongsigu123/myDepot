/* components/cart/cart.wxss */
.hz{
	width: 100%;
	position: relative;
}

.wenzi{
	position: absolute;
	left: 0;
	bottom: 11px;
	transition: opacity 0.7s;
}
.tp{
	width: 100%;
	vertical-align: bottom;
	transition: filter 0.7s;
}
.active{
	filter: brightness(70%);
}
.active2{
	filter: brightness(100%);
}
.act{
	opacity: 1;
}
.act2{
	opacity: 0;
}
.t1,.t2{
	color: white;
	margin-left: 15px;
	text-align: left;
	line-height: 30px;
	font-weight: bold;
	letter-spacing: 1px;
}
.t1{
	font-size: 12px;
	line-height: 25px;
}
.t2{
	font-size: 16px;
}
.t1 .tremen{
	margin-left: 7px;
}
/* components/comment/comment.wxss */
.content{
	margin-top: 20px;
	width: 100%;
}
.title{
	text-align: left;
	font-weight: bold;
	color: #282828;
	font-size: 14px;
	padding-left: 5%;
	line-height: 50px;
	padding-top: 20px;
}
.cont{
	width: 100%;
	padding-top: 7px;
	border-bottom: 1px solid #f1f1f1;
	overflow: hidden;
	padding-bottom: 9px;
}
.hz{
	width: 96%;
	margin: 0 auto;
	overflow: hidden;
}
.hz .left{
	float: left;
	width: 15%;
	text-align: center;
}
.left .tp{
	width: 33px;
	height: 33px;
	border-radius: 50%;
	vertical-align: bottom;
}
.hz .right{
	float: left;
	width: 83%;
	overflow: hidden;
}
.hz .top,.hz .bottom{
	width: 100%;
	overflow: hidden;
}
.hz .top{
	display: flex;
	align-items: center;
}
.hz .top .lef{
	width: 70%;
}
.hz .top .rig{
	width: 30%;
	text-align: right;
}
.lef .t1{
	width: 100%;
	font-size: 11px;
	color: #8e8e8e;
	display: block;
}
.lef .t2{
	width: 100%;
	font-size: 10px;
	display: block;
	color: #c0c0c0;
}
.rig .icon,.rig text{
	font-size: 12px;
	color: #8e8e8e;
}
.rig text{
	margin-left: 3px;
}
.hz .bottom{
	text-align: left;
	font-size: 15px;
	color: #000;
	letter-spacing: 1px;
	line-height: 22px;
	margin-bottom: 7px;
}
.end{
	width: 100%;
	text-align: center;
	line-height: 40px;
	font-size: 14px;
	color: #999;
}
.comment{
	width: 100%;
	overflow: hidden;
}
.conttitle{
	width: 100%;
	position: relative;
	height: 60px;
}
.conttitle .gd{
	display: block;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
	padding: 5px 12px;
	color: white;
	font-size: 15px;
	background-color: #b6b2b2;
	border-radius: 5px;
}
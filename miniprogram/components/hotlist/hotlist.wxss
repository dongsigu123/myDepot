/* components/hotlist/hotlist.wxss */
.dhz{
	width: 100%;
	position: relative;
}
.xhz{
	width: 50%;
	float: left;
	position: relative;
}
.wenzi{
	width: 100%;
	position: absolute;
	left: 0;
	bottom: 11px;
}
.xhz .wenzi{
	bottom: 5px;
	left: -4px;
	transition: opacity 0.7s;
}
.tp{
	width: 100%;
	vertical-align: bottom;
	transition: filter 0.7s;
}
.active{
	filter: brightness(70%);
}
.active2{
	filter: brightness(100%);
}
.act{
	opacity: 1;
}
.act2{
	opacity: 0;
}
.xhz .tp{
	height: 230rpx;
}
.t1,.t2{
	color: white;
	margin-left: 15px;
	text-align: left;
	line-height: 24px;
	font-weight: bold;
	letter-spacing: 1px;
}
.t1{
	font-size: 12px;
	line-height: 25px;
}
.t2{
	font-size: 16px;
}
.xhz .t1{
	font-size: 9px;
	line-height: 16px;
}
.xhz .t2{
	width: 88%;
	white-space: nowrap;
	overflow: hidden;
	word-break:keep-all;
	text-overflow:ellipsis;
	font-size: 12px;
}
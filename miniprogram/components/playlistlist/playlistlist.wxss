/* components/playlistlist/playlistlist.wxss */
.hz{
	width: 168px;
	float: left;
	position: relative;
	margin-right: 12px;
}
.cont .hz:nth-last-child(1){
	margin-right: 0;
}
.tp{
	width: 100%;
	height: 210rpx;
	vertical-align: bottom;
	transition: filter 0.7s;
}
.active{
	filter: brightness(70%);
}
.active2{
	filter: brightness(100%);
}
.act{
	opacity: 1;
}
.act2{
	opacity: 0;
}
.wenzi{
	position: absolute;
	left: 9px;
	bottom: 6px;
	text-align: left;
	width: 95%;
	transition: opacity 0.7s;
}
.wenzi text:nth-child(2){
	font-weight: bold;
}
.wenzi>view{
	width: 95%;
	font-size: 12px;
	color: white;
	white-space: nowrap;
	overflow: hidden;
	line-height: 20px;
	word-break:keep-all;
	text-overflow:ellipsis;
}
.wenzi .t2{
	font-size: 12px;
}
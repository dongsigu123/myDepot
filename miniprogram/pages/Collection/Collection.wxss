/* miniprogram/pages/Collection/Collection.wxss */
.box{
	width: 100%;
	position: relative;
}
.box .content{
	width: 94%;
	margin: 0 auto;
}
.content .hz{
	width: 100%;
	overflow: hidden;
	margin: 7px 0 9px;
	display: flex;
	align-items: center;
}
.hz .left{
	width: 45%;
	float: left;
	position: relative;
}
.hz .left image{
	width: 100%;
	height: 177rpx;
	vertical-align: bottom;
	filter: brightness(70%);
}
.hz .left text{
	color: white;
	position: absolute;
	font-size: 12px;
	right: 7%;
	bottom: 7%;
}
.hz .right{
	width: 50%;
	float: left;
	margin-left: 5%;
}
.hz .right .top{
	width: 100%;
	margin-bottom: 12px;
}
.hz .right .top text{
	width: 95%;
	text-align: left;
	line-height: 20px;
	word-break: break-all;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	font-size: 14px;
	color: #333;
	margin-top: 5px;
}
.hz .bottom{
	width: 100%;
	display: flex;
	align-items: center;
}
.pingfen,.t1,.fenxiang,.t2{
	display: inline-block;
}
.t1,.fenxiang,.t2{
	color: #b3b3b3;
}
.t1{
	margin-right: 12px;
}
.t1,.t2{
	font-size: 12px;
	margin-left: 3px;
}
.fenxiang{
	font-size: 16px;
	font-weight: bold;
}
.end{
	width: 100%;
	text-align: center;
	line-height: 40px;
	font-size: 14px;
	color: #999;
	background-color: #f6f6f6;
}
.kong{
	color: #797979;
	position: absolute;
	left: 50vw;
	top: 50vh;
	transform: translate(-50%,-50%);
	text-align: center;
	font-size: 16px;
}
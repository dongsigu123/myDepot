/* pages/search/search.wxss */
.box{
	width: 100%;
	height: 100vh;
	overflow: hidden;
	background-color: #191919;
}
.top{
	width: 100%;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 2;
}
.top .quxiao{
	color: #717171;
}
.top .sousuo{
	color: #fff;
}
.top .inp{
	background-color: #242424;
	color: #fff;
}
.top .van-icon-search{
	color: #fff;
}
.top .van-search__content{
	background-color: #242424;
}
.hot{
	margin: 80px 3% 0;
	width: 94%;
}
.history{
	width: 94%;
	margin: 0 3%;
}
.hot .title,.history .title text{
	text-align: left;
	font-size: 14px;
	color: #717171;
}
.history{
	overflow: hidden;
}
.history .qc{
	float: right;
	display: flex;
	align-items: center;
	padding: 3px 7px;
}
.history .ljt{
	font-size: 16px;
	margin-left: 3px;
	color: #717171;
}
.hot .hotcont,.history .hiscont{
	width: 100%;
	padding: 15px 0;
}
.hiscont .hiscottext{
	width: 100%;
}
.hot .hotcont .hz,.history .hiscont .hz{
	display: inline-block;
	background-color: #242424;
	color: white;
	font-size: 14px;
	border-radius: 3px;
	margin-right: 7px;
	padding: 5px 7px;
	margin-top: 7px;
}
.history .hiscont .kong{
	width: 100%;
	text-align: center;
	font-size: 12px;
	color: #717171;
}
.content{
	width: 100%;
	padding: 0;
}
.content .title{
	width: 100%;
	text-align: left;
	font-size: 12px;
	color: #999;
	line-height: 40px;
	padding-left: 3%;
}
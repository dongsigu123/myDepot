/* pages/playpage/playpage.wxss */
.box{
	padding-bottom: 50px;
	padding-top: 260px;
}
.video{
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 2;
}
.title{
	text-align: center;
	font-weight: bold;
	color: #000;
	font-size: 18px;
	line-height: 40px;
	width: 93%;
	margin: 12px auto 0;
}
.xtitle{
	text-align: center;
	line-height: 30px;
	font-size: 12px;
	margin-top: 3px;
	color: #333;
}
.xtit1{
	margin: 0 3px;
}
.intro{
	width: 93%;
	margin: 36px auto;
	font-size: 15px;
	line-height: 25px;
}
.intro text{
	text-align: left;
	letter-spacing: 1px;
	color: #333333;
}
.foot{
	width: 100%;
	position: fixed;
	left: 0;
	bottom: 0;
	padding-left: 5%;
	display: flex;
	align-items: center;
	height: 50px;
	background-color: white;
	z-index: 2;
	overflow: hidden;
	border-top: 1px solid #f1f1f1;
}
.left{
	width: 50%;
	float: left;
	position: relative;
}
.left .bi{
	position: absolute;
	left: 9%;
	top: 50%;
	transform: translate(-50%,-50%);
	color: #999;
	font-weight: bold;
}
.inp{
	border-radius: 15px;
	width: 90%;
	position: absolute;
	border: 1px solid #cac9c9;
	height: 25px;
	left: 0;
	top: 50%;
	transform: translateY(-50%);
	padding-left: 5%;
	font-size: 13px;
}
.right{
	width: 45%;
	display: flex;
	float: left;
	justify-content: space-around;
	color: #999;
}
.hz{
	text-align: center;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 0 7px;
}
.hz .xiazai{
	transform: rotateZ(180deg);
}
.hz text{
	font-size: 12px;
}
.right .xin,.right .fengxiang,.right .xiazai{
	font-weight: bold;
}
.author{
	width: 100%;
	overflow: hidden;
	display: flex;
	align-items: center;
	border-bottom: 1px solid #f1f1f1;
	padding-bottom: 12px;
	margin: 12px 0;
}
.author .left{
	float: left;
	width: 10%;
	margin-left: 5%;
	text-align: center;
}
.author .left image{
	width: 35px;
	height: 35px;
	border-radius: 50%;
	vertical-align: bottom;
}
.author .right{
	width: 85%;
	float: left;
	overflow: hidden;
}
.author .lef{
	float: left;
	width: 80%;
}
.author .lef .t1{
	font-size: 14px;
	color: #333;
	font-weight: bold;
	display: block;
}
.author .lef .t2{
	display: block;
	font-size: 12px;
	color: #575555;
}
.author .rig{
	display: flex;
	align-items: center;
}
.author .yjt{
	float: right;
	font-size: 14px;
	color: #575555;
}
.fulltext{
	width: 100%;
	font-size: 15px;
	color: #38b1fe;
	border-bottom: 1px solid rgb(233, 229, 229);
	padding-bottom: 45px;
}
.fulltext .ftext{
	margin: auto;
	display: flex;
	text-align: center;
	align-content: center;
	justify-content: center;
}
.fulltext .yjiantou{
	transform: rotateZ(-90deg);
	margin-left: 2px;
}